{
  "manifest_version": 2,
  "name": "waves_wallet",
  "version": "0.0.1",
  "description": "A Liquid Wallet",

  "background": {
    "page": "background.html"
  },

  "browser_action": {
    "default_title": "waves_wallet",
    "browser_style": true,
    "default_popup": "popup.html"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "css": [],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "js/in_page.wasm",
    "js/in_page.js"
  ]
}
